{
    "name": "vscode-epics",
    "displayName": "vscode-epics",
    "description": "EPICS syntax highlighting and tools.",
    "version": "0.0.4",
    "publisher": "nsd",
    "icon": "images/icon.png",
    "extensionDependencies": ["c"],
    "engines": {
        "vscode": "^1.5.0"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:NSenaud/vscode-epics.git"
    },
    "categories": [
        "Languages", "Snippets"
    ],
    "contributes": {
        "languages": [{
            "id": "database",
            "aliases": ["EPICS Database", "DB"],
            "extensions": [".db",".template"],
            "configuration": "./language-configuration.json"
        },
        {
            "id": "substitutions",
            "aliases": ["EPICS Substitutions", "Substitutions"],
            "extensions": [".substitutions", ".sub", ".subs"],
            "configuration": "./language-configuration.json"
        },
        {
            "id": "startup",
            "aliases": ["EPICS Startup", "Startup"],
            "extensions": [".cmd"],
            "configuration": "./language-configuration.json"
        },
        {
            "id": "proto",
            "aliases": ["EPICS prototypes", "Prototypes"],
            "extensions": [".proto"],
            "configuration": "./language-configuration.json"
        },
        {
            "id": "c",
            "aliases": ["SNL"],
            "extensions": [".st"]
        }],
        "grammars": [{
            "language": "database",
            "scopeName": "source.epics.db",
            "path": "./syntaxes/db.tmLanguage.json"
        },
        {
            "language": "substitutions",
            "scopeName": "source.epics.sub",
            "path": "./syntaxes/sub.tmLanguage.json"
        },
        {
            "language": "startup",
            "scopeName": "source.epics.startup",
            "path": "./syntaxes/startup.tmLanguage.json"
        },
        {
            "language": "proto",
            "scopeName": "source.epics.proto",
            "path": "./syntaxes/proto.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "database",
                "path": "./snippets/db.json"
            },
            {
                "language": "startup",
                "path": "./snippets/startup.json"
            },
            {
                "language": "c",
                "path": "./snippets/c.json"
            }
        ]
    }
}

