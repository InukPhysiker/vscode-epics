{
    "scenario version": {
        "prefix": "epics.weTest.scenario.version",
        "body": [   "version:",
                    "  major:  ${1:1}",
                    "  minor:  ${2:0}",
                    "  bugfix: ${3:0}"]
    },
    "scenario config": {
        "prefix": "epics.weTest.scenario.config",
        "body": [   "config:",
                    "  type:   \"${1:unit} ${2:functional}\"",
                    "  name:   \"${3:my_scenario_name}\"",
                    "  prefix: \"${4:LNS-ISRC-010:}\" # PV prefix",
                    "  delay:  ${5:1} # sec"]
    },
    "scenario tests": {
        "prefix": "epics.weTest.scenario.tests",
        "body": [   "tests:",
                    "  - name:     \"${1:my_sub_test}\"",
                    "    prefix:   \"${2:LNS-ISRC-010:}\"",
                    "    message:  \"${3:my_message}\"",
                    "    setter:   \"${4:VolS}\"",
                    "    getter:   \"${5:VolRB}\"",
                    "    margin:   ${6:0} # %",
                    "    # choose between range, values and commands",
                    "    range:",
                    "      start:     ${6:0}",
                    "      stop:      ${7:10}",
                    "      step:      ${8:1}",
                    "    values:",
                    "      - ${10:1}",
                    "      - ${11:10}",
                    "      - ${12:100}",
                    "    commands:",
                    "      - name:      \"${13:command_name}\"",
                    "        message:   \"${14:my_message}\"",
                    "        margin:    ${15:0} # %",
                    "        setter:    \"${16:VolS}\"",
                    "        getter:    \"${17:VolRB}\"",
                    "        get_value: ${18:20} # if setter and getter have different values",
                    "        set_value: ${19:20} # if setter and getter have different values",
                    "        value:     ${20:20} # if setter and getter have the same value",
                    "        delay:     ${21:3} # sec",
                    "      - name: ...",
                    "    finally:",
                    "      setter:    \"${22:VolS}\"",
                    "      value:     ${23:0} # %"]
    }
    ,
    "suite": {
        "prefix": "epics.weTest.suite",
        "body": [   "version:",
                    "  major:  \"${1:1}\"",
                    "  minor:  \"${2:0}\"",
                    "  bugfix: \"${3:0}\"",
                    "",
                    "name: \"${4:name of the suite}\"",
                    "",
                    "include:",
                    "    # ${5:description of your test xxx}",
                    "    - '${6:xxx}.yml'",
                    "",
                    "    # ${7:description of your test yyy}",
                    "    - '${8:yyy}.yml'"]
    }
    ,
    "unit range": {
        "prefix": "epics.weTest.unit.range",
        "body": [   "  - name:    \"range of ${1:power supply voltage}\"",
                    "    setter:  \"${2:VolS}\"",
                    "    getter:  \"${3:VolRB}\"",
                    "    margin:  ${4:0} # %",
                    "    range:",
                    "      start: ${5:0}",
                    "      stop:  ${6:10}",
                    "      step:  ${7:1}",
                    "    finally:",
                    "      value: ${8:0} # %"]
    },
    "unit limits": {
        "prefix": "epics.weTest.unit.limits",
        "body": [   "  - name:     \"limits of ${1:power supply voltage}\"",
                    "    setter:   \"${2:VolS}\"",
                    "    getter:   \"${3:VolRB}\"",
                    "    margin:   ${4:0} # %",
                    "    commands:",
                    "      - name:      \"${5:min limit}\"",
                    "        set_value: ${6:-1}",
                    "        get_value: ${7:0}",
                    "      - name:      \"${8:max limit}\"",
                    "        set_value: ${9:11}",
                    "        get_value: ${10:10}",
                    "    finally:",
                    "      value:     ${11:0} # %"]
    },
    "functional command": {
        "prefix": "epics.weTest.functional.command",
        "body": [   "commands:",
                    "    - name:      \"set ${1:voltage}\"",
                    "      setter:    \"${2:Vol}S\"",
                    "      getter:    \"${3:Vol}Mes\"",
                    "      margin:    ${4:0} # %",
                    "      set_value: ${6:10}",
                    "      get_value: ${7:10}"]
    }
}
