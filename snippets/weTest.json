{
    "scenario version": {
        "prefix": "epics.weTest.scenario.version",
        "body": [   "version:",
                    "  major:  \"${1:1}\"",
                    "  minor:  \"${2:0}\"",
                    "  bugfix: \"${3:0}\""]
    },
    "scenario config": {
        "prefix": "epics.weTest.scenario.config",
        "body": [   "config:",
                    "  type:   \"${1:unit} ${2:functional}\"",
                    "  name:   \"${3:my_scenario_name}\"",
                    "  prefix: \"${4:LNS-ISRC-010:}\" # PV prefix",
                    "  delay:  ${5:1} # sec"]
    },
    "scenario tests": {
        "prefix": "epics.weTest.scenario.tests",
        "body": [   "tests:",
                    "  - name:     \"${1:my_sub_test}\"",
                    "    prefix:   \"${2:LNS-ISRC-010:}\"",
                    "    message:  \"${3:my_message}\"",
                    "    setter:   \"${4:VolS}\"",
                    "    getter:   \"${5:VolRB}\"",
                    "    margin:   ${6:5 # %}",
                    "    # choose between range, values and commands",
                    "    range:",
                    "      start:     ${6:0}",
                    "      stop:      ${7:10}",
                    "      step:      ${8:1}",
                    "    values:",
                    "      - ${10:1}",
                    "      - ${11:10}",
                    "      - ${12:100}",
                    "    commands:",
                    "      - name:      \"${13:command_name}\"",
                    "        message:   \"${14:my_message}\"",
                    "        margin:    ${15:5} # %",
                    "        setter:    \"${16:VolS}\"",
                    "        getter:    \"${17:VolRB}\"",
                    "        get_value: ${18:20}",
                    "        set_value: ${19:20}",
                    "        value:     ${20:20}",
                    "        delay:     ${21:3} # sec",
                    "      - name: ...",
                    "    finally:",
                    "      setter:    \"${22:VolS}\"",
                    "      value:     ${23:0} # %"]
    }
    ,
    "suite": {
        "prefix": "epics.weTest.suite",
        "body": [   "version:",
                    "  major:  \"${1:1}\"",
                    "  minor:  \"${2:0}\"",
                    "  bugfix: \"${3:0}\"",
                    "",
                    "name: \"${4:name of the suite}\"",
                    "",
                    "include:",
                    "    # ${5:description of your test xxx}",
                    "    - '${6:xxx}.yml'",
                    "",
                    "    # ${7:description of your test yyy}",
                    "    - '${8:yyy}.yml'"]
    }
}
