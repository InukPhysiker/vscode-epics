{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "State Notation Language files syntax",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#c_style_comments"
        },
        {
            "include": "#cpp_style_comments"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.epics",
                    "match": "\\b(program|assign|to|monitor|sync|syncq|option|ss|state|when|exit|break|continue|if|else|while|for|return|switch|case|default)\\b"
                },
                {
                    "name": "constant.character.epics",
                    "match": "\\b(enum|struct|union|typename|typedef|void|sizeof)\\b"
                },
                {
                    "name": "entity.name.type",
                    "match": "\\b(char|short|int|long|unsigned char|unsigned short|unsigned int|unsigned long|int8_t|uint8_t|int16_t|uint16_t|int32_t|uint32_t|float|double|string)\\b"
                },
                {
                    "name": "entity.name.function",
                    "match": "\\b(delay|pvPut|pvPutComplete|pvArrayPutComplete|pvPutCancel|pvArrayPutCancel|pvGet|pvGetComplete|pvArrayGetComplete|pvGetCancel|pvArrayGetCancel|pvGetQ|pvFreeQ|pvFlushQ|pvAssign|pvAssignSubst|pvMonitor|pvArrayMonitor|pvStopMonitor|pvArrayStopMonitor|pvSync|pvArraySync|pvCount|pvStatus|pvSeverity|pvMessage|pvTimeStamp|pvAssigned|pvConnected|pvArrayConnected|pvIndex|pvFlush|pvChannelCount|pvAssignCount|pvConnectCount|efSet|efClear|efTest|efTestAndClear|macValueGet)\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.epics",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.epics",
                    "match": "\\\\."
                }
            ]
        },
        "numbers": {
            "patterns": [{
                "name": "constant.numeric",
                "match": "(\\d+(\\.\\d+)?)"
            }]
        },
        "c_style_comments": {
            "name":"comment.line.number-sign.epics",
            "begin": "/\\*",
            "end": "\\*/",
            "patterns": [
                {
                    "name":"constant.character.escape.epics",
                    "match": "\\\\."
                }
            ]
        },
        "cpp_style_comments": {
            "name":"comment.line.number-sign.epics",
            "begin": "//",
            "end": "^",
            "patterns": [
                {
                    "name":"constant.character.escape.epics",
                    "match": "\\\\."
                }
            ]
        },
        "functions": {
            "end": "\\b( )\\b?\\(",
            "patterns": [{
                "name": "entity.name.function",
                "match": "(\\w+)"
            }]
        },
        "variables": {
            "patterns": [{
                "name": "variable.name",
                "match": "(\\w+)"
            }]
        }
    },
    "scopeName": "source.epics.snl"
}